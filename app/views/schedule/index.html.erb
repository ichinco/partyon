<%= render partial:"layouts/trip_nav", locals:{trip: @trip} %>

<div class="container">
    <% (1 .. @trip.length).each do |day| %>
        <ul class="list-group">
            <li class="list-group-item">day <%= day %></li>
            <% (0 .. 23).each do |hour| %>
                <li class="list-group-item"><%= hour %> <%= link_to "add activity", trip_activity_index_path(@trip) %></li>
            <% end %>
        </ul>
    <% end %>
</div>